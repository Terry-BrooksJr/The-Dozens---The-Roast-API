{
	"name": "Standard Flask App/API - Dev Enviornment",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {},
		"ghcr.io/devcontainers-contrib/features/pre-commit:1": {},
		"ghcr.io/devcontainers-contrib/features/pylint:1": {},
		"ghcr.io/devcontainers-contrib/features/coverage-py:1": {}
	},
	"containerEnv": {
		"MONGODB_URI": "op://Dev-Work/ENV/DATABASE RELATED VARIABLES - Postgres/MONGODB_URI-DOZEN",
		"SECRET_KEY": "op://Dev-Work/ENV/General ENV Varibles/SECRET_KEY",
		"JWT_SECRET_KEY":"op://Dev-Work/ENV/General ENV Varibles/JWT_SECRET_KEY",
		"REDIS_URI": "op://Dev-Work/ENV/DATABASE RELATED VARIABLES - Postgres/REDIS_URI-DOZEN",
		"HEROKU_KEY": "op://Dev-Work/ENV/lzxyjtfcrzokz355qkgc2pftry/HEROKU_KEY",
		"FLASK_RUN_PORT": "6969"
	},
	"forwardPorts": [
		6969
	],
	"portsAttributes": {
		"6969": {
			"label": "Application",
			"onAutoForward": "silent",
			"onAutoForwardFailure": "notify",
			"requireLocalPort": true
		}
	},
	"postCreateCommand": "pip3 install -r requirements.txt && flask run --reload && ./1password.sh1",
	"customizations": {
		"vscode": {
			"extensions": [
				"mhutchie.git-graph",
				"Atishay-Jain.All-Autocomplete",
				"almenon.arepl",
				"ms-python.black-formatter",
				"streetsidesoftware.code-spell-checker",
				"wmaurer.change-case",
				"oleg-shilo.codemap",
				"ExodiusStudios.comment-anchors",
				"adam-bender.commit-message-editor",
				"ezforo.copy-relative-path-and-line-numbers",
				"ms-azuretools.vscode-docker",
				"formulahendry.docker-explorer",
				"Gruntfuggly.todo-tree",
				"mgesbert.python-path",
				"littlefoxteam.vscode-python-test-adapter",
				"Bar.python-import-helper",
				"tht13.python",
				"ms-python.vscode-pylance",
				"ms-python.pylint",
				"ms-python.isort",
				"donjayamanne.githistory",
				"GitHub.copilot",
				"GitHub.vscode-pull-request-github",
				"VisualStudioExptTeam.vscodeintellicode",
				"VisualStudioExptTeam.intellicode-api-usage-examples",
				"eriklynd.json-tools",
				"magicstack.MagicPython",
				"mongodb.mongodb-vscode"
			]
		}
	}
}